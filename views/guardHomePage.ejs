<%- include('partials/guardHeader') %>

<div style="padding:4%; padding-top:0%; font-family:sans-serif;font-size: 15px;">
    
      

        <h2
        style="background-color:rgb(51, 51, 51); padding:18px;color:white; text-align: center; border-radius: 1rem; font-size: 20px; max-width: 1000px; margin: auto; margin-bottom: 20px;">
        Residents of <%= societyName %>
        </h2>
        <div class="flex-container">
          <% societyResidents.forEach((resident)=> { %>
            <% if(resident.isGuard == false){ %>
            <!-- <a href="/sendNote"> -->
            <div onclick="window.location.href='/sendNote?id=<%= resident._id %>'" style="cursor: pointer;">
              <ul class="list-group zoom">
                <li class="list-group-item flat-number">
                  <i class="fas fa-house-user"></i>
                  <%= resident.flatNumber %>
                </li>
                <li class="list-group-item flat-owner">
                  <%= resident.firstName %>
                    <%= resident.lastName %>
                </li>
                    <li class="list-group-item">
                    <i class="fas fa-phone-square-alt"></i>
                  <%= resident.phoneNumber %>
                </li>
              </li>
            
              </ul>
            </div>
            <!-- </a> -->
            <% } %>
        <% }) %>
  </div>

<%- include('partials/footer') %>